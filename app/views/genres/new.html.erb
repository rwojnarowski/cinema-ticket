<%= render 'shared/errors', obj: @genre %>
<div class="row">
  <div class="col-xs-12">
    <%= form_for(@genre, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :name_genre %>
        </div>
          <div class="col-sm-8">
            <%= f.text_field :genre, class: "form-control", placeholder: "genre name", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-4" align="center">
      [ <%= link_to 'Go Back', genres_path %> ]
    </div>
  </div>
</div>
